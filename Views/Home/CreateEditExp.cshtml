@{
    ViewData["Title"] = "Create / Edit";
}

@model firstmvc.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit your Expenses</h1>
</div>

<form asp-action="CreateEditForm" asp-controller="Home" method="post">
    <input type="hidden" name="Id" asp-for="Id" />

    <label class="mt-3">Value</label>
    <input class="form-control" type="nummber" placeholder="0" asp-for="Value" />

    <label class="mt-3">Description</label>
    <input class="form-control" type="text" placeholder="Add a description" asp-for="Description" />

    <div class="d-flex justify-content-center align-items-center">
        <button class="btn btn-primary mt-5" type="submit">Submit</button>
    </div>
</form>
