@{
    ViewData["Title"] = "Expenses";
}

 @model List<Expense>

<div class="text-center">
    <h1 class="display-5">Expenses</h1>
    <br>
      <div class="search-container">
        <input type="text" class="search-bar" id="searchInput" placeholder="Search...">
        <button class="search-button" onclick="search()">Search</button>
    </div>
    <div id="searchResults"></div>
    <h3>Total Expenses: @Model.Sum(x => x.Value) RS</h3>

    <br>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var i in Model)
                {
                    <tr>
                        <td>@i.Id</td>
                        <td>@i.Value</td>
                        <td>@i.Description</td>
                        <td>@i.Date.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="Home" asp-action="CreateEditExp"
                                asp-route-id="@i.Id">Edit</a>
                            <a class="btn btn-danger" asp-controller="Home" asp-action="DeleteExp"
                                asp-route-id="@i.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-center align-items-center">
        <a class="btn btn-warning" asp-controller="Home" asp-action="CreateEditExp">Add Expenses</a>
    </div>
</div>


<style>
.search-container {
            margin-top: 10px;
            margin-bottom: 20px;
        }
        .search-bar {
            width: 300px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }
        .search-button {
            padding: 10px 15px;
            font-size: 16px;
            color: #fff;
            background-color: #007BFF;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .search-button:hover {
            background-color: #0056b3;
        }
    </style>